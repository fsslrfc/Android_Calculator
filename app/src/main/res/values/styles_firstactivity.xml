<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButtonStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">100px</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalculatorButtonStyle_symbol">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">100px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_button_symbol</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CalculatorButtonStyle_number">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">100px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_button_number</item>
        <item name="android:textColor">#FF777777</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CalculatorButtonStyle_equal">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">100px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_button_equal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CalculatorScreenSymbolStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">100px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#22000000</item>
    </style>

    <style name="CalculatorScreenResultStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">300px</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:textColor">#FF5985EB</item>
        <!--item name="android:layout_marginStart">20dp</item-->
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="CalculatorScreenFlagStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">100px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FF5985EB</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="CalculatorButtonStyle_land">
