<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_count"
        style="@style/ItemCount" />

    <TextView
        android:id="@+id/item_num1"
        style="@style/ItemText"
        android:layout_toRightOf="@id/item_count" />

    <TextView
        android:id="@+id/item_sym"
        style="@style/ItemText"
        android:layout_toRightOf="@id/item_num1" />

    <TextView
        android:id="@+id/item_num2"
        style="@style/ItemText"
        android:layout_toRightOf="@id/item_sym" />

    <TextView
        android:id="@+id/item_equ"
        style="@style/ItemText"
        android:layout_toRightOf="@id/item_num2"
        android:text=" = " />

    <TextView
        android:id="@+id/item_res"
        style="@style/ItemText"
        android:layout_toRightOf="@id/item_equ" />

    <Button
        android:id="@+id/item_del"
        style="@style/ItemButton" />

</RelativeLayout>